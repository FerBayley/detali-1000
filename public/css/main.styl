*
	border 0
	padding 0
	margin 0
html
	height 100%
	width 100%
body
	box-sizing border-box
	font-family 'Open Sans', sans-serif
	font-size 16px
	height 100%
footer
	background-color #1c1252
	bottom 0
	padding 1em 0 .5em 1em
	text-align center
	width 100%
	a
		color #DDD
		text-decoration none
	a:hover
		text-decoration underline
	.Redes 
		ul li
			color #FFF
			display inline-block
			font-size .8em
			font-weight 100
			padding 0 .3em 0 .3em
			vertical-align top
header
	background-color #000
	height auto
	font-size .9em
	font-weight 100
	padding .5em 0 .5em 0
	text-align center
	width auto
	a
		color #FFF
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
		text-decoration none
	a:hover
		color orange
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
.Contenedor-Interno
	height auto
	width auto
.Logo
	padding 2em 0 0 1em
nav
	background-color rgba(0,0,0,.7)
	height 65%
	margin 0 0 0 2em
	position relative
	width 17%
	ul li
		font-weight 100
		list-style none
		padding .7em 1em .2em 1.5em
		a
			color #FFF
			font-size .8em
			text-decoration none
.Columnas
	box-sizing border-box
	height auto
	margin 0 0 5em 0
	width 100%
	&-titulo
		font-size .9em
		margin .4em 0 .4em 0
	&-precio
		color grey
		font-size .8em	
	&-1
		height auto
		display inline-block
		padding 1.5em 0 0 0
		vertical-align top
		width 25%
		ul li
			padding .5em 0 .2em 1.5em
		a
			color #333
			font-size .8em
			text-decoration none
	&-2
		height auto
		display inline-block
		margin 0 1.3em 0 1.3em
		padding 1.5em 0 0 0
		text-align center
		vertical-align top
		width 20%
		a
			color #FFF
			background-color #e67e22
			border-radius .3px .3px .3px .3px
			padding 0 .5em 0 .5em
			text-decoration none
		a:hover
			opacity .8
		h2
			font-size .9em
		h3
			font-size .8em
			margin 0 0 3.5em 0
		img
			border solid 1px #DDD
			border-radius 3px 3px 3px 3px
			height auto
			width 80%
	&-3
		height auto
		display inline-block
		margin 0 1.3em 0 1.3em
		padding 1.5em 0 0 0
		text-align center
		vertical-align top
		width 20%
		a
			color #FFF
			background-color #e67e22
			border-radius .3px .3px .3px .3px
			padding 0 .5em 0 .5em
			text-decoration none
		a:hover
			opacity .8
		h2
			font-size .9em
		h3
			font-size .8em
			margin 0 0 3.5em 0
		img
			border solid 1px #DDD
			border-radius 3px 3px 3px 3px
			height auto
			width 80%
	&-4
		height auto
		display inline-block
		margin 0 1.3em 0 1.3em
		padding 1.5em 0 0 0
		text-align center
		vertical-align top
		width 20%
		a
			color #FFF
			background-color #e67e22
			border-radius .3px .3px .3px .3px
			padding 0 .5em 0 .5em
			text-decoration none
		a:hover
			opacity .8
		h2
			font-size .9em
		h3
			font-size .8em
			margin 0 0 3.5em 0
		img
			border solid 1px #DDD
			border-radius 3px 3px 3px 3px
			height auto
			width 80%
.Contenedor-Interno
	height auto
	width 100%
.Contenedor
	background url('../../public/images/cover.jpg')
	-webkit-background-size cover
	-moz-background-size cover
	-o-background-size cover
	background-size cover
	height 100%
	a
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
		padding 0 .5em 0 .5em
	a:hover
		color orange
		-webkit-transition all 0.5s ease
		-moz-transition all 0.5s ease
		-o-transition all 0.5s ease
		transition all 0.5s ease
		padding 0 .5em 0 .5em
.Menu
	background-color #FFF
	font-family 'Open Sans', sans-serif
	font-size .8em
	font-weight 100
	height auto
	padding .5em 0 .5em 2.6em
	width auto
	ul li
		display inline-block
		vertical-align middle
		a
			color #333
			text-decoration none
		a:hover
			color orange
	
// ======== MEDIA QUERIES ======= //
@media screen and (max-width: 1200px)
	footer
		height auto
		margin 0
		padding .5em 0 .5em 0
		ul
			line-height 2.5em
			margin 0 auto
			width 100%
			li
				display block
	.Contenedor-Interno
		height auto
		max-width auto
	.Columnas
		height auto
		width auto
		&-1
			height auto
			width 22%
		&-2
			text-align center
		&-3
			text-align center
		&-4
			text-align center
.Burguer
	background-color orange
	border-radius 5px
	cursor pointer
	display none
	height 40px
	line-height 40px
	padding 0 1em 0 1em
	position absolute
	left 20px
	top 20px
	width auto
	z-index 3
	
@media screen and (max-width: 800px)
	footer
		height auto
		width auto
		margin 0
		padding .5em 0 .5em 0
		width 100%
		ul
			line-height 2.5em
			margin 0 auto
			width 100%
			li
				display block
	.Contenedor-Interno
		height auto
		max-width auto
	.Columnas
		height auto
		width auto
		&-1
			height auto
			width 100%
			ul
				margin 1em 0 1em 0
				text-align center
				li
					display inline-block
				a
					color #FFF
		&-2
			text-align center
			margin 0 2em 0 3em
			width 40%
		&-3
			text-align center
			margin 0 2em 0 1em
			width 40%
		&-4
			text-align center
			margin 0 2em 0 3em
			width 40%
@media screen and (max-width: 650px)
	footer
		height auto
		width auto
		margin 0
		padding .5em 0 .5em 0
		width 100%
		ul
			line-height 1.5em
			margin 0 auto
			width 90%
			li
				display block
				img
					margin .7em 0 0 0
	.Columnas
		height auto
		text-align center
		width auto
		ul
			margin 0
			padding 0
			li
				margin 0
				padding .5em .7em .5em .7em
		&-1
			text-align left
		&-2
			margin 0
			padding 0
			width 32%
		&-3
			margin 0
			padding 0
			width 32%
		&-4
			margin 0
			padding 0
			width 32%
	.Contenedor-Interno
		height auto
		max-width auto
	.Menu
		margin 0
		text-align center
		line-height 2em
		padding .7em 0 .7 0
		ul li
			margin 0
			padding 0
@media screen and (max-width: 480px)
	.Columnas
		&-1
			margin 0 0 1em 0
			width 100%
			ul li
				font-size 1.1em
				a
					color #333
		&-2
			height auto
			width 100%
		&-3
			height auto
			width 100%
		&-4
			height auto
			margin 0 0 10em 0
			width 100%
	.Burguer
		display block
		position fixed
	.Tarjeta
		margin 0
		padding 0 1em 0 9em
		text-align justify
		&-texto
			font-size 1.2em
			line-height 1.7em
	.Menu
		background-color rgba(0, 0, 0, .8)
		height auto
		max-heigth 100%
		display flex
		align-items center
		text-align center
		position fixed
		bottom 0
		rigth 0
		left -110%
		top 0
		z-index 2
		width 100%
		transition .3s
		ul li
			font-size 1.5em
			font-weight 100
			line-height 2.5em
			text-align left
			width 100%
			a
				color #FFF
	.Menu.active
		left 0
	.Pleca
		display none


